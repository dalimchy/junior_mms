                                                                                <% }else{ %>
                                                                                    <button  data-id="<%= v.user_id %>" onclick="activeUser(this)" class="btn btn-block btn--md btn-danger waves-effect waves-light"> Inactive </button>
                                                                                <%} %>
                                                                            <% }else{ %>
