<script>
function deactiveUser(elm){
    var id = $(elm).attr('data-id');
    $.ajax({
        type: 'POST',
        url: '/deactiveUser/',
        data: {id:id},
        success: function(res){
            if(res.msg == 'success'){
                $(elm).removeClass('btn-info').addClass('btn-danger').text('Inactive');
                $(elm).attr('onclick', 'activeUser(this)');
            }
        }
    });
}

function activeUser(elm){
    var id = $(elm).attr('data-id');
    $.ajax({
        type: 'POST',
        url: '/activeUser/',
        data: {id:id},
        success: function(res){
            if(res.msg == 'success'){
                $(elm).removeClass('btn-danger').addClass('btn-info').text('Active');
                $(elm).attr('onclick', 'deactiveUser(this)');
            }
        }
    });
}
</script>
