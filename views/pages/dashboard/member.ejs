                                                                    </tr>
                                                                    <% }})%>
                                                                    <% _.each(member_list,function(v,k){ if(v.user_role == 2){ %>
                                                                    <tr>
                                                                        <td><%= v.user_name %></td>
                                                                        <td><%= v.user_phone %></td>
                                                                        <td><%= v.user_email %></td>
                                                                        <td> Member </td>
                                                                        <td id="<%= v.user_id %>">
                                                                            <% if(userData.user_role == 'Manager'){ %>
