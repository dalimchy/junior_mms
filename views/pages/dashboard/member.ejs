                                                                            <button class="btn btn--md btn-primary waves-effect waves-light" href="#viewProduct" onclick="viewMember(this)" data-id="<%= v.user_id %>" data-animation="fall" data-plugin="custommodal" data-overlayspeed="100" data-overlaycolor="#36404a"> <i class="fa fa-eye"></i> </button>
                                                                            <% if(userData.user_role == 'Manager'){ %>
                                                                            <button class="btn btn--md btn-info waves-effect waves-light"> <i class="fa fa-edit (alias)"></i> </button>
                                                                            <button class="btn btn--md btn-danger waves-effect waves-light" data-id="<%= v.user_id %>" onclick="removeThisMember(this)"> <i class="fa fa-trash-o"></i> </button>
