<%- include('../../layouts/dashboard/head') %>
<%- include('../../layouts/dashboard/topbar') %>
<%- include('../../layouts/dashboard/left_bar') %>
                <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="content-page">
                <!-- Start content -->
                <div class="content">
                    <div class="container">

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box">

                                    <h4 class="header-title m-t-0 m-b-30">Add Member</h4>
                                    <% if(ses_msg !== null){ %>
                                        <div class="alert alert-success alert-dismissable">
                                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                            <%= ses_msg %>
                                        </div>
                                    <%   } %>

                                    <div class="row">
                                        <form action="/member" class="form-horizontal" role="form" method="POST" enctype="multipart/form-data">
                                            
                                            <div class="col-lg-10">
                                                <div class="form-group">
                                                    <label class="col-md-5 control-label">Member Name</label>
                                                    <div class="col-md-7">
                                                        <input type="text" class="form-control" placeholder="Member Name" name="member_name">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-5 control-label">Member Email</label>
                                                    <div class="col-md-7">
                                                        <input type="Email" class="form-control" placeholder="Member Email" name="member_email">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-5 control-label">Phone Number</label>
                                                    <div class="col-md-7">
                                                        <input type="text" class="form-control" placeholder="Phone Number" name="phone_number">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-md-8 col-md-offset-4 text-center" >
                                                        <input type="file" class="dropify" data-default-file="" value="" name="profile_pic" accept="image/*" required>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 text-center">
                                                <button type="submit" class="btn btn-primary waves-effect waves-light w-xs m-b-5">Add Member</button>
                                            </div>
                                        </form>

                                    </div><!-- end row -->

                                </div>
                            </div><!-- end col -->
                        </div>
                        <!-- end row -->

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <h4 class="header-title m-t-0 m-b-30">Member List</h4>
    
                                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
                                        cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Phone</th>
                                                <th>Email</th>
                                                <th>Role</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                                <% _.each(member_list,function(v,k){ if(v.user_role == 1){ %>
                                                <tr>
                                                    <td><%= v.user_name %></td>
                                                    <td><%= v.user_phone %></td>
                                                    <td><%= v.user_email %></td>
                                                    <td><% if(v.user_role == 1){ %> Manager <% }else{ %> Member <%} %></td>
                                                    <td>
                                                        <button class="btn btn--md btn-primary waves-effect waves-light" href="#viewProduct" onclick="viewMember(this)" data-id="<%= v.user_id %>" data-animation="fall" data-plugin="custommodal" data-overlayspeed="100" data-overlaycolor="#36404a"> <i class="fa fa-eye"></i> </button>
                                                        <button class="btn btn--md btn-info waves-effect waves-light"> <i class="fa fa-edit (alias)"></i> </button>
                                                        <% if(v.user_role != 1){ %> 
                                                        <button class="btn btn--md btn-danger waves-effect waves-light" data-id="<%= v.user_id %>" onclick="removeThisMember(this)"> <i class="fa fa-trash-o"></i> </button>
                                                        <% } %>
                                                    </td>
                                                </tr>
                                                <% }})%>
                                                <% _.each(member_list,function(v,k){ if(v.user_role == 2){ %>
                                                <tr>
                                                    <td><%= v.user_name %></td>
                                                    <td><%= v.user_phone %></td>
                                                    <td><%= v.user_email %></td>
                                                    <td><% if(v.user_role == 1){ %> Manager <% }else{ %> Member <%} %></td>
                                                    <td>
                                                        <button class="btn btn--md btn-primary waves-effect waves-light" href="#viewProduct" onclick="viewMember(this)" data-id="<%= v.user_id %>" data-animation="fall" data-plugin="custommodal" data-overlayspeed="100" data-overlaycolor="#36404a"> <i class="fa fa-eye"></i> </button>
                                                        <button class="btn btn--md btn-info waves-effect waves-light"> <i class="fa fa-edit (alias)"></i> </button>
                                                        <% if(v.user_role != 1){ %> 
                                                        <button class="btn btn--md btn-danger waves-effect waves-light" data-id="<%= v.user_id %>" onclick="removeThisMember(this)"> <i class="fa fa-trash-o"></i> </button>
                                                        <% } %>
                                                    </td>
                                                </tr>
                                                <% }})%>
                                        </tbody>
                                    </table>
                                </div>
                            </div><!-- end col -->
                        </div>
                        <!-- end row -->


                    </div> <!-- container -->

                </div> <!-- content -->

                <footer class="footer">
                    2016 - 2017 © Adminto.
                </footer>

            </div>


            <!-- ============================================================== -->
            <!-- End Right content here -->
            <!-- ============================================================== -->


