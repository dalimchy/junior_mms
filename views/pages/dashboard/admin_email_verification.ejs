        <![endif]-->

        <script src="/admin_assets/js/modernizr.min.js"></script>
        <style type="text/css">
            #fileUploadRegister .dropify-wrapper{
                height: 130px;
            }
            #fileUploadRegister .dropify-clear{
                bottom: 10px;
                top: unset;;
            }
        </style>
    </head>
    <body>

        <div class="account-pages"></div>
        <div class="clearfix"></div>
        <div class="wrapper-page">
                <div id="pageLoader">
                        <img src="/admin_assets/images/loader.svg" alt="">
                    </div>
            <div class="text-center">
                <a href="/" class="logo"><span>Mess Management<span> System</span></span></a>
                <h5 class="text-muted m-t-0 font-600">2019 Â© Rich IT.</h5>
            </div>
        	<div class="m-t-40 card-box">
                    <% if(ses_msg !== null){ %>
                        <div class="alert alert-info">
                                <strong>Success!</strong> <%= ses_msg %>
                        </div>
                    <%   } %>
                <div class="text-center">
                    <h4 class="text-uppercase font-bold m-b-0">Verification </h4>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal m-t-20" action="/admin/checkVerification" method="POST">

                        <div class="form-group">
                            <div class="col-md-12">
                                <label for="verificationCode">Verification Code*</label>
                                <input type="number" required id="verificationCode" name="verification_code" class="form-control" placeholder="Verification Code " >
                            </div>
                        </div>
                        <div class="col-md-12 m-t-5" style="display: none">
                            <span>Didn't get a code?</span>
                            <button class="btn btn-purple waves-effect waves-light btn-xs m-b-5 ">Click To Resend</button>
                        </div>

                        <div class="form-group text-center m-t-30">
                            <div class="col-xs-12">
                                <button type="submit" class="btn btn-primary btn-bordred btn-block waves-effect waves-light" >Submit</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
            <!-- end card-box -->
        </div>
        <!-- end wrapper page -->




    	<script>
            var resizefunc = [];
        </script>

        <!-- jQuery  -->
        <script src="/admin_assets/js/jquery.min.js"></script>
        <script src="/admin_assets/js/bootstrap.min.js"></script>
