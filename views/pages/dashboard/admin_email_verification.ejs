        <!-- App js -->
        <script src="/admin_assets/js/jquery.core.js"></script>
        <script src="/admin_assets/js/jquery.app.js"></script>


        <script type="text/javascript">
            $(window).load(function() {
                // Animate loader off screen
                $("#pageLoader").fadeOut("slow");;
            });
        </script>

	</body>
