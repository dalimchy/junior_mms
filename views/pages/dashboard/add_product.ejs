                                                            <div class="col-md-12" id="viewProductImage">
                                                                
                                                            </div>
                                                        </div><!-- Row -->
                                                    </div><!-- Sortable -->
                                                    <div class="form-group">
                                                        <div class="col-md-10 col-md-offset-1" onclick="openMoreImage(this)">
