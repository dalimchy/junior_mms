    function categoryOnchange(ele){
        var value = $(ele).val();
        if(value !== ''){
        $.ajax({
                type: 'POST',
                url: '/dashboard/findSubCate',
                data :{data:value},
                error: function(err){
                    console.log(err);
                },
                success: function(res){
                    if(res.msg == 'success'){
                        $('#select_sub_category').html('');
                        $('#select_sub_category').val('');
