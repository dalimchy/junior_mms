        border-radius:4px; 
        padding:2px;
        box-sizing:border-box; 
        background:#d8d8d8;
        margin:0px auto;
        display: flex; 
        align-items: center;
        justify-content: center;
    }
    .load_product{
        align-items: center;
        min-height: 464px;
        display: flex;
        justify-content: center;
    }
    .load_product .fa-spinner::before{
        font-size: 50px;
    }
