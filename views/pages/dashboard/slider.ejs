<%- include('../../layouts/dashboard/head') %>
<%- include('../../layouts/dashboard/topbar') %>
<%- include('../../layouts/dashboard/left_bar') %>
                <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="content-page">
                <!-- Start content -->
                <div class="content">
                    <div class="container">

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box">

                                    <h4 class="header-title m-t-0 m-b-30">Add Slider</h4>
                                    <% if(ses_msg !== null){ %>
                                        <div class="alert alert-success alert-dismissable">
                                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                            <%= ses_msg %>
                                        </div>
                                    <%   } %>

                                    <div class="row">
                                        <form action="/dashboard/slider" class="form-horizontal" role="form" method="POST" enctype="multipart/form-data">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <div class="col-md-10 col-md-offset-1">
                                                        <input type="file" class="dropify" data-default-file="" value="" name="slider_img" accept="image/*" required>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label class="col-md-2 control-label">Assign slider</label>
                                                    <div class="col-sm-6">
                                                        <div class="radio">
                                                            <input type="radio" name="assign_slider" id="slider1" value="slider1" checked="">
                                                            <label for="slider1">
                                                                Slider 01
                                                            </label>
                                                        </div>
                                                        <div class="radio radio-custom">
                                                            <input type="radio" name="assign_slider" id="slider2" value="slider2">
                                                            <label for="slider2">
                                                                Slider 02
                                                            </label>
                                                        </div>
                                                        <div class="radio radio-primary">
                                                            <input type="radio" name="assign_slider" id="slider3" value="slider3">
                                                            <label for="slider3">
                                                                Slider 03
                                                            </label>
                                                        </div>

                                                    </div>
                                                    
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-2 text-right">Status</label>
                                                    <div class="col-md-10">
                                                        <input type="checkbox" checked data-plugin="switchery" data-color="#10c469" data-size="small" data-switchery="true" style="display: none;" name="active_status">
                                                    </div>
                                                </div>
                                            </div><!-- end col -->
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label">Heading</label>
                                                    <div class="col-md-10">
                                                        <input type="text" class="form-control" placeholder="Enter your slider heading..." name="slider_heading">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label">Slider description</label>
                                                    <div class="col-md-10">
                                                        <textarea class="form-control" rows="5" name="slider_desc"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 text-center">
                                                <button type="submit" class="btn btn-primary waves-effect waves-light w-xs m-b-5">Add</button>
                                            </div>
                                        </form>

                                    </div><!-- end row -->

                                </div>
                            </div><!-- end col -->
                        </div>
                        <!-- end row -->

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
    
                                    <!-- <div class="dropdown pull-right">
                                        <a href="#" class="dropdown-toggle card-drop" data-toggle="dropdown" aria-expanded="false">
                                            <i class="zmdi zmdi-more-vert"></i>
                                        </a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="#">Action</a></li>
                                            <li><a href="#">Another action</a></li>
                                            <li><a href="#">Something else here</a></li>
                                            <li class="divider"></li>
                                            <li><a href="#">Separated link</a></li>
                                        </ul>
                                    </div> -->
                                    
                                    <h4 class="header-title m-t-0 m-b-30">Slider Image List</h4>
    
                                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
                                        cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>Slider Image</th>
                                                <th>Assign Slider</th>
                                                <th>Slider Heading</th>
                                                <th>Slider Description</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% _.each(allSlider, function(v,k){ %> 
                                                <tr id="_slider<%= v.appearance_id %>">
                                                    <td class="text-center"><img style="max-width: 100px; max-height: 100px; border-radius: 4px" src="<%= v.slider_img %>"></td>
                                                    <td><%= v.assign_slider %></td>
                                                    <td><%= v.slider_heading %></td>
                                                    <td><%= v.slider_desc %></td>
                                                    <td data-id="<%= v.appearance_id %>"><% if(v.status == 1){ %><button onclick="update_appear(this,'status')" type="button" class="btn btn-block btn--md btn-success waves-effect waves-light" data-status="active">Active</button><% }else{ %><button onclick="update_appear(this,'status')" type="button" class="btn btn-block btn--md btn-danger waves-effect waves-light" data-status="inactive">In-Active</button><% } %></td>
                                                    <td data-id="<%= v.appearance_id %>" ><button class="btn btn-block btn--md btn-danger waves-effect waves-light" onclick="appearance_delete(this)"> <i class="fa fa-trash-o"></i> </button></td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div><!-- end col -->
                        </div>
                        <!-- end row -->


                    </div> <!-- container -->

                </div> <!-- content -->

                <footer class="footer">
                    2016 - 2017 © Adminto.
                </footer>

            </div>


            <!-- ============================================================== -->
            <!-- End Right content here -->
            <!-- ============================================================== -->


