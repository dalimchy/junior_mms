<%- include('../../layouts/dashboard/head') %>
<%- include('../../layouts/dashboard/topbar') %>
<%- include('../../layouts/dashboard/left_bar') %>
<script> 
var monthYear = '<%= month%> <%= year %>';
</script>    
<% var totalMeal =  0; %>
<% var totalBazar =  0; %>
<% var fixedCost =  fixed_cost_list.house_rent + fixed_cost_list.electricity_bill + fixed_cost_list.gas_bill + fixed_cost_list.water_bill + fixed_cost_list.garbage_bill + fixed_cost_list.chef_bill + fixed_cost_list.internet_bill; %>
<%  _.each(meal_list,function(vm,km){ totalMeal = totalMeal + vm.breakfast + vm.lunch + vm.dinner + vm.guest;}) %>
<%  _.each(bazar_list,function(vb,kb){ totalBazar = totalBazar + Number(vb.total_amount)}) %>
<% var mealRate =  Math.ceil(totalBazar / totalMeal); %>
<% var perHeadFixedCost = Math.ceil(fixedCost / member_list.length) %>

            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="content-page">
                <!-- Start content -->
                <div class="content">
                    <div class="container">
                            <div>
                                
                                <select class="select2" id="changeMonthSelect">
                                    <option selected>Select Month</option>
                                </select>
                                <h4 class="header-title m-t-0 m-b-30 text-center" id="" style="display: inline-block;"><script type="text/javascript">document.write(moment(monthYear,'MM YYYY').format('MMMM YYYY'));</script></h4>
                            </div>
                            <div class="row">
                            <div class="col-lg-3 col-md-6">
                                <div class="card-box widget-user">
                                    <div class="text-center">
                                        <h2 class="text-success" data-plugin="counterup"><%= totalMeal %></h2>
                                        <h5 class="text-success" >Total Meal</h5>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-6">
                                <div class="card-box widget-user">
                                    <div class="text-center">
                                        <h2 class="text-primary" data-plugin="counterup"><%= totalBazar %> Tk.</h2>
                                        <h5 class="text-primary">Total Bazar</h5>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-6">
                                <div class="card-box widget-user">
                                    <div class="text-center">
                                        <h2 class="text-warning" data-plugin="counterup"><% if(isNaN(mealRate)){ %> 0 <%}else{%> <%= mealRate %><%} %>  Tk.</h2>
                                        <h5 class="text-warning" >Meal Rate</h5>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-6">
                                <div class="card-box widget-user">
                                    <div class="text-center">
                                        <h2 class="text-info" data-plugin="counterup"><%= fixedCost %> Tk.</h2>
                                        <h5 class="text-info" >Fixed Cost</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box">
                                    <% if(ses_msg !== null){ %>
                                        <div class="alert alert-success alert-dismissable">
                                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                            <%= ses_msg %>
                                        </div>
                                    <%   } %>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="panel panel-custom panel-border">
                                                        <div class="panel-heading">
                                                            <h4 class="header-title">Monthly Total Calculations</h4>
                                                        </div>
                                                        <div class="panel-body">
                                                            <div class="col-md-12">
                                                                <table class="table m-b-0">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>#</th>
                                                                            <th>Name</th>
                                                                            <th>Total Meal</th>
                                                                            <th>Total Bazar</th>
                                                                            <th>Meal Cost</th>
                                                                            <th>Meal Balance</th>
                                                                            <th>Total Deposit</th>
                                                                            <th>Total Cost</th>
                                                                            <th>Balance</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        <% _.each(member_list, function(vu,ku){ %> 
                                                                            <% var thisTotalMeal = 0 ; %>
                                                                            <% var thisTotalBazar = 0 ; %>
                                                                            <% var totalDeposit = 0 %>
                                                                            <%  _.each(meal_list,function(vm,km){ if(vu.user_id == vm.assign_user_id ){thisTotalMeal = thisTotalMeal + vm.breakfast + vm.lunch + vm.dinner + vm.guest; }}) %>
                                                                            <%  _.each(bazar_list,function(vb,kb){ if(vu.user_id == vb.assign_user_id ){thisTotalBazar = thisTotalBazar + Number(vb.total_amount);}}) %>
                                                                            <% _.each(payment_log,function(vp,kp){if(vp.log_data.payment_user_id == vu.user_id ){totalDeposit = totalDeposit + Number(vp.log_data.amount) }})%>
                                                                            <% var this_meal_cost = thisTotalMeal * mealRate %>
                                                                            <% var this_meal_c_s = thisTotalBazar - this_meal_cost %>
                                                                            <% var totalCost = perHeadFixedCost - this_meal_c_s %>
                                                                            <% var balance = vu.account - totalCost %>
                                                                            
                                                                            <tr class="active">
                                                                                <th scope="row" id="<%= vu.user_id %>">1</th>
                                                                                <td><%= vu.user_name %></td>
                                                                                <td><%= thisTotalMeal %></td>
                                                                                <td><%= thisTotalBazar %> Tk.</td>
                                                                                <td><% if(isNaN(this_meal_cost)){ %> 0 <%}else{%> <%= this_meal_cost %><%} %> Tk.</td>
                                                                                <td><% if(isNaN(this_meal_c_s)){ %> 0 <%}else{%> <%= this_meal_c_s %><%} %> Tk.</td>
                                                                                <td><%= (totalDeposit) + (thisTotalBazar) %> Tk.</td>
                                                                                <td class="_userTotal" user-id="<%= vu.user_id %>" user-cost="<% if(isNaN(totalCost)){ %>0<%}else{%><%= totalCost %><%} %>"><% if(isNaN(totalCost)){ %> 0 <%}else{%> <%= totalCost %><%} %> Tk.</td>
                                                                                <td><% if(monthly_report.status == 1){ _.each(monthly_report.mess_members, function(vmr,kmr){ if(vmr.user_id == vu.user_id){%> <%= vmr.account %><%}}); }else{ if(isNaN(balance)){ %> 0 <%}else{%> <%= balance %><%} }%> Tk.</td>
                                                                            </tr>
                                                                        <%})%>
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <% if(userData.user_role == 'Manager'){ %>
                                                    <% if(monthly_report.status == 1){ %> 
                                                        <button class="btn btn-danger waves-effect waves-light m-b-5" style="float: right;"> <span>Closed</span> <i class="fa fa-lock m-l-5"></i> </button>
                                                    <%}else{%> 

                                                        <button class="btn btn-primary waves-effect waves-light m-b-5" onclick="closeThisMonth(this)" style="float: right;"  monthly-report-id="<%= monthly_report.month_id %>" meal-rate="<%= mealRate %>" total-bazar="<%= totalBazar %>" total-meal="<%= totalMeal %>"> <span>Close Calculations</span> <i class="fa fa-lock m-l-5"></i> </button>
                                                    <%}%>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div><!-- end col -->
                            
                        </div>
                        <!-- end row -->


                    </div> <!-- container -->

                </div> <!-- content -->

                <footer class="footer">
                    2016 - 2017 © Adminto.
                </footer>

            </div>


            <!-- ============================================================== -->
            <!-- End Right content here -->
            <!-- ============================================================== -->


<%- include('../../layouts/dashboard/right_bar') %>
<%- include('../../layouts/dashboard/foot') %>
        <!-- Sweet Alert js -->
        <script src="/admin_assets/plugins/bootstrap-sweetalert/sweet-alert.min.js"></script>
        <script src="/admin_assets/pages/jquery.sweet-alert.init.js"></script>
<script type="text/javascript">
    var totaldays = moment(moment().format('MMMM YYYY'), "MMMM YYYY").daysInMonth();
    var today = moment().format('DD');
    var thisMonth = moment().format('MM');
    var thisYear = moment().format('YYYY');

    function closeThisMonth(ele){
                var month_id = $(ele).attr('monthly-report-id');
                var meal_rate = $(ele).attr('meal-rate');
                var total_bazar = $(ele).attr('total-bazar');
                var total_meal = $(ele).attr('total-meal');
                var activeUser = [];
                $.each($('._userTotal'),function(k,v){
                    var data = {
                        cost:$(v).attr('user-cost'),
                        user_id:$(v).attr('user-id')
                    }
                    activeUser.push(data);
                })
                swal({
                    title: "Are you sure ?",
                    text: "You want to close this month calculations ? This cannot be UNDONE !",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonClass: 'btn-danger waves-effect waves-light',
                    confirmButtonText: 'Yes!',
                    closeOnConfirm: false
                },function(isConfirm){
                  if(isConfirm){
                    $.ajax({
                        type: "POST",
                        url: '/closed-calculations',
                        data: {
                            month_id:month_id,
                            data:activeUser,
                            meal_rate:meal_rate,
                            total_bazar:total_bazar,
                            total_meal:total_meal
                        },
                        success: function(res) {
                            if(res.msg == 'success'){
                                swal({
                                    title:"Closed!", 
                                    text:"Succesfully closed", 
                                    type:"success",
                                    showConfirmButton: true
                                },function(res){
                                     location.reload();
                                });
                            }
                        },
                        error: function() {
                            console.log('failed');
                        }
                    });
                    
                  }                  
                });
            }

    $('#changeMonthSelect').on('change',function(){
        window.location.replace('/monthly-calculation/'+$(this).val()+'');
    })
</script>