<%- include('../../layouts/dashboard/head') %>
<%- include('../../layouts/dashboard/topbar') %>
<%- include('../../layouts/dashboard/left_bar') %>                <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment-with-locales.js"></script>
            <div class="content-page">
                <!-- Start content -->
                <div class="content">
                    <div class="container">

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box">
                                    <% if(ses_msg !== null){ %>
                                        <div class="alert alert-success alert-dismissable">
                                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                            <%= ses_msg %>
                                        </div>
                                    <%   } %>
                                    <div class="row">
                                            <div class="col-sm-12">
                                                <div class="card-box table-responsive">
                                                    <table id="datatable-buttons" class="table table-striped table-bordered">
                                                        <thead>
                                                            <tr>
                                                                <th>Day</th>
                                                                <%  _.each(member_list,function(v,k){ %> 
                                                                    <th><%= v.user_name %>  </th>
                                                                <%})%>
                                                                <th>Sub Total</th>
                                                            </tr>
                                                        </thead>
                
                                                        <tbody>
                                                            <% var sub_total = 0 ; %>
                                                            <% for(var i=1; i<= totaldays; i++) {%>
                                                            <tr>
                                                                <td><%= i %></td>
                                                                <% sub_total = 0;  _.each(member_list,function(v,k){ %> 
                                                                    <% var total= 0; %>
                                                                    
                                                                    <% var f = 0; _.each(meal_list, function(va,ka){ if(va.assign_user_id == v.user_id && va.day == i ){var total =va.lunch + va.dinner + va.breakfast + va.guest; sub_total = sub_total + total; f++; %>
                                                                        <td><%= total %></td>
                                                                    <% }else if(ka == meal_list.length -1  && f == 0 ){ %> <td>0</td> <% }}) %>
                                                                <%})%>
                                                                <td><%= sub_total%></td>
                                                            </tr>
                                                            <% } %>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div><!-- end col -->
                                        </div>
                                </div>
                            </div><!-- end col -->
                        </div>
                        <!-- end row -->


                    </div> <!-- container -->

                </div> <!-- content -->

                <footer class="footer">
                    2016 - 2017 © Adminto.
                </footer>

            </div>


            <!-- ============================================================== -->
            <!-- End Right content here -->
            <!-- ============================================================== -->


